{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6", "dom"],
        "outDir": "out",
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "types": [
            "node",  // 'node' 타입 추가
            "vscode"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
